{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules"
  ]
}
